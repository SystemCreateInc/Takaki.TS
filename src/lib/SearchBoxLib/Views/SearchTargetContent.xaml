<UserControl x:Class="SearchBoxLib.Views.SearchTargetContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Horizontal" Margin="5" Width="150">
        <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Content="{Binding ContentName}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                  VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="3"/>
    </StackPanel>
</UserControl>
